                    <% if(!currentUser) { %>
                        <a class="nav-link" href="/login">Login</a>
                        <a class="nav-link" href="/register">Register</a>
                        <% } else { %>
                            <a class="nav-link" href="/campgrounds">Logout</a>
                            <% }%>
                </nav>
            </div>
        </header>
        <main class="px-3">
